@model UWUesports.Web.ViewModels.AssignUserRoleViewModel

<div class="mb-3">
    <label asp-for="OrganizationId" class="form-label"></label>
    <select asp-for="OrganizationId" asp-items="@(new SelectList(Model.Organizations, "Id", "Name"))" class="form-control">
        <option value="">-- Wybierz organizację --</option>
    </select>
    <span asp-validation-for="OrganizationId" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="UserId" class="form-label"></label>
    <select asp-for="UserId" asp-items="@(new SelectList(Model.Users, "Id", "Nickname"))" class="form-control">
        <option value="">-- Wybierz użytkownika --</option>
    </select>
    <span asp-validation-for="UserId" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="RoleId" class="form-label"></label>
    <select asp-for="RoleId" asp-items="@(new SelectList(Model.Roles, "Id", "Name"))" class="form-control">
        <option value="">-- Wybierz rolę --</option>
    </select>
    <span asp-validation-for="RoleId" class="text-danger"></span>
</div>
