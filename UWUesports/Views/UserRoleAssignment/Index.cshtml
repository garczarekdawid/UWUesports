@model IEnumerable<UWUesports.Web.Models.UserRoleAssignment>

@{
    ViewData["Title"] = "Przypisania ról";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Nowe przypisanie</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Użytkownik</th>
            <th>Organizacja</th>
            <th>Rola</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User.Nickname</td>
                <td>@item.Organization.Name</td>
                <td>@item.Role.Name</td>
                <td>
                    <a asp-action="Edit"
                       asp-route-userId="@item.UserId"
                       asp-route-organizationId="@item.OrganizationId"
                       asp-route-roleId="@item.RoleId"
                       class="btn btn-sm btn-warning">Edytuj</a>
                    <form asp-action="Delete" method="post" style="display:inline">
                        <input type="hidden" name="userId" value="@item.UserId" />
                        <input type="hidden" name="organizationId" value="@item.OrganizationId" />
                        <input type="hidden" name="roleId" value="@item.RoleId" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Czy na pewno chcesz usunąć to przypisanie?')">
                            Usuń
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>