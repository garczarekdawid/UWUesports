@model UWUesports.Web.ViewModels.AddPlayerToTeamViewModel

<form asp-action="Create" method="post">
    @* To wyświetla błędy ogólne (np. z ModelState.AddModelError("", "...")) *@
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label for="PlayerId">Gracz</label>
        <select asp-for="PlayerId" class="form-control" asp-items="@(new SelectList(Model.Players, "Id", "Nickname"))">
            <option value="">-- Wybierz gracza --</option>
        </select>
        <span asp-validation-for="PlayerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="TeamId">Drużyna</label>
        <select asp-for="TeamId" class="form-control" asp-items="@(new SelectList(Model.Teams, "Id", "Name"))">
            <option value="">-- Wybierz drużynę --</option>
        </select>
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Dodaj gracza do drużyny</button>
</form>

@section Scripts {
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script src="~/js/select2-init.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
