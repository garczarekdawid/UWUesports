@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole<int>>
@{
    ViewData["Title"] = "Roles List";
}

<h2>Roles</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Role</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@role.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@role.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
